
<div class="contents-row">
  <div class="container">
    <div class="upper-container">
    <h2 class="title">新規会員登録</h2>
    </div>
    <%= form_with model: @user, url: user_registration_path, id: 'new_user', class: 'new_user', local: true do |f| %>
      <%= devise_error_messages! %>
      
       <div class="field">
        <%= f.label :nick_name, class:'example_name' %> <span class='must'>必須</span>
        <%= f.text_field :nick_name, class:'input_some', autofocus: true %>
      </div>

      <div class="field">
        <%= f.label :email, class:'example_name'%><span class='must'>必須</span>
        <%= f.email_field :email, class:'input_some' %>
      </div>

      <div class="field">
        <%= f.label :password,class:'example_name' %>
        <% if @minimum_password_length %>
          <span class='must_bigger'>最低<%= @minimum_password_length %>文字</span>
        <% end %>
        <%= f.password_field :password, class:'input_some', autocomplete: "off" %>
      </div>

      <div class="field">
        <%= f.label :password_confirmation,class:'example_name' %><span class='must_biggest'>パスワード確認</span>
        <%= f.password_field :password_confirmation, class:'input_some', autocomplete: "off" %>
      </div>

      <div class="actions">
        <%= f.submit "Sign up", class:'btn' %>
      </div>
    <% end %>
  </div>
</div>