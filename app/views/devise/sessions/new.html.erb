
<div class="contents-row">
  <div class="container">
    <div class="upper-container">
    <h2 class="title">ログイン</h2>
    </div>
  <div class='login-flash-message'>
    <%= flash[:notice] %>
    <%= flash[:alert] %>
  </div>
<%= form_with model: @user, url: user_session_path, class: 'new_user', local: true do |f| %>
 <%= devise_error_messages! %> 
  <div class="field">
    <%= f.label :email, class:'example_name' %>
    <%= f.email_field :email, class:'input_some',autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :password, class:'example_name' %><br />
    <%= f.password_field :password, class:'input_some', autocomplete: "current-password" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "Log in", class:'btn' %>
  </div>
  <div class="sign-up"><%= link_to '未登録の方はこちら', new_user_registration_path, class:"sign_up_text" %></div>
<% end %>


